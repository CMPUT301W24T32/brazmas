<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/event_view_card"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/event_view_card_poster_iv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/event_poster"
        tools:srcCompat="@tools:sample/avatars"
        android:layout_marginEnd="10dp"
            />

    <TextView
        android:id="@+id/event_view_card_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="@string/eventname"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_toEndOf="@id/event_view_card_poster_iv"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/event_view_card_desc_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/description"
        android:layout_toEndOf="@id/event_view_card_poster_iv"
        android:layout_below="@id/event_view_card_name_tv"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/event_view_card_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/date"
        android:layout_toEndOf="@id/event_view_card_poster_iv"
        android:layout_below="@id/event_view_card_desc_tv"
        android:textStyle="italic"/>
</RelativeLayout>
