<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.ViewAttendeesActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view_attendees_attendee_rv"
        />

    <Button
        android:id="@+id/view_attendees_notify_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_attendees_attendee_rv"
        android:layout_margin="10dp"
        android:layout_marginTop="482dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/lightPink"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Send Announcement"
        android:textColor="@color/black" />
</RelativeLayout>