<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/view_event_container_cl"
    android:layout_height="match_parent">

    <!--    <FrameLayout-->
    <!--        android:id="@+id/view_event_container_cl"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        app:layout_constraintStart_toStartOf="parent"-->
    <!--        app:layout_constraintEnd_toEndOf="parent"-->
    <!--        app:layout_constraintTop_toTopOf="parent"-->
    <!--        >-->
    <!--        -->
    <!--    </FrameLayout>-->

    <ScrollView
        android:id="@+id/view_scroll_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="1dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/view_event_date_title_tv"
                android:layout_width="113dp"
                android:layout_height="36dp"
                android:gravity="center"
                android:text="Event Date"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view_event_poster_iv" />

            <TextView
                android:id="@+id/view_event_announcement_tv1"
                android:layout_width="264dp"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:text="TextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.503"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view_event_announcementtv2" />

            <TextView
                android:id="@+id/view_event_announcement_title_tv"
                android:layout_width="136dp"
                android:layout_height="45dp"
                android:gravity="center"
                android:text="Event announcements"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view_event_description_tv" />

            <TextView
                android:id="@+id/view_event_description_title_tv"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="Event Description"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view_event_date_tv" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/view_event_checkins_tv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_event_name_tv"
                />

            <TextView
                android:id="@+id/view_event_name_tv"
                android:layout_width="123dp"
                android:layout_height="50dp"
                android:layout_marginStart="156dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="156dp"
                android:gravity="center"
                android:text="Event name"
                android:textSize="22sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/view_event_poster_text_tv"
                android:layout_width="103dp"
                android:layout_height="38dp"
                android:layout_marginTop="32dp"
                android:text="Event Poster"
                android:textSize="18sp"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view_event_name_tv" />

            <ImageView
                android:id="@+id/view_event_poster_iv"
                android:layout_width="279dp"
                android:layout_height="186dp"
                android:layout_marginTop="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.492"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view_event_poster_text_tv"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/view_event_description_tv"
                android:layout_width="282dp"
                android:layout_height="110dp"
                android:layout_marginTop="12dp"
                android:text="TextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.492"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view_event_description_title_tv" />

            <TextView
                android:id="@+id/view_event_announcementtv2"
                android:layout_width="264dp"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:text="TextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.503"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view_event_announcement_title_tv" />

            <TextView
                android:id="@+id/view_event_date_tv"
                android:layout_width="177dp"
                android:layout_height="35dp"
                android:layout_marginTop="6dp"
                android:gravity="center"
                android:text="Date"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view_event_date_title_tv" />

            <Button
                android:id="@+id/view_event_see_checked_in_attendees_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_event_announcement_tv1"
                android:text="See checked in users"
                />

            <Button
                android:id="@+id/view_event_see_signed_up_attendees_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="See signed up users"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_event_see_checked_in_attendees_btn"
                />

            <CheckBox
                android:id="@+id/signed_up_CB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Attend?"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/view_event_QR_iv"
                app:layout_constraintTop_toBottomOf="@id/view_event_see_signed_up_attendees_btn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>