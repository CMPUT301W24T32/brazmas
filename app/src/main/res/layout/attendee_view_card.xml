<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/attendee_view_card_picture_iv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="10dp"
        tools:srcCompat="@tools:sample/avatars"
        android:contentDescription="@string/user_profile_picture" />

    <TextView
        android:id="@+id/attendee_view_card_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="@string/attendee_name"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        android:layout_toEndOf="@id/attendee_view_card_picture_iv"
        />

    <TextView
        android:id="@+id/attendee_view_card_check_ins_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/check_in_count"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"
        android:layout_toEndOf="@id/attendee_view_card_picture_iv"
        android:layout_below="@id/attendee_view_card_name_tv"
        />

    <TextView
        android:id="@+id/attendee_view_card_id_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/id"
        android:layout_toEndOf="@id/attendee_view_card_picture_iv"
        android:layout_below="@id/attendee_view_card_check_ins_tv"
        android:textStyle="italic"/>


</RelativeLayout>